{
  "manifest_version": 3,
  "name": "UPF Blocker",
  "version": "1.0.0",
  "description": "Logs products and queries OpenFoodFacts",
  "permissions": [
    "https://search.openfoodfacts.org/*"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/getproduct.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "js/background.js"
  }
}
